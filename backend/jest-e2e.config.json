{
  "moduleFileExtensions": ["js", "json", "ts"],
  "roots": ["<rootDir>/test"],
  "testRegex": ".*\\.e2e-spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "src/**/*.(t|j)s",
    "!src/**/*.d.ts"
  ],
  "coverageDirectory": "coverage-e2e",
  "testEnvironment": "node",
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1"
  },
  "testTimeout": 30000,
  "setupFilesAfterEnv": ["<rootDir>/test/setup.ts"]
}
